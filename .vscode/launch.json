{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Adonis TS",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "ace",
        "serve",
        "--watch"
      ],
      "cwd": "${workspaceFolder}/backend",
      "protocol": "inspector",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}
